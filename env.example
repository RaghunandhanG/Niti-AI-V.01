# AI Resume Builder - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# ===================================
# GOOGLE GEMINI API (REQUIRED)
# ===================================
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_gemini_api_key_here

# ===================================
# LINKEDIN API (OPTIONAL)
# ===================================
# Required only if you want LinkedIn profile integration
# Get from LinkedIn Developer Portal: https://developer.linkedin.com/
LINKEDIN_API_KEY=your_linkedin_api_key_here

# ===================================
# APPLICATION SETTINGS (OPTIONAL)
# ===================================
# Flask settings
FLASK_ENV=development
FLASK_DEBUG=True

# Server settings
HOST=0.0.0.0
PORT=5001

# ===================================
# SECURITY SETTINGS (OPTIONAL)
# ===================================
# Generate a secure secret key for Flask sessions
# You can generate one using: python -c "import secrets; print(secrets.token_hex(16))"
SECRET_KEY=your_secret_key_here 